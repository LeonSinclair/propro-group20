@model Subordinates

@{
    ViewData["Title"] = "Settings";
}
<h4>@ViewData["Title"]</h4>
<div class="row">
<div class="col-lg-2">
<div style="margin-top: 10px;">
    <h3>OPTIONS</h3>
        <ul>
            <li>
                Profile
            </li>
            <li>
                </li>

        </ul>
</div>
</div>

<div class="col-lg-10">
<div style="margin-top: 10px;">
    <h3>PROFILE</h3>
    <div class="section">
                
    <div class="well">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <label asp-for="FirstName">First name:</label>
                <div class="form-group">
                    <input type="text" asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Surname:</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BankName">Bank Name:</label>
                    <input type="text" asp-for="BankName" class="form-control" />
                    <span asp-validation-for="BankName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BankAddress">Bank Address:</label>
                    <input type="text" asp-for="BankAddress" class="form-control" />
                    <span asp-validation-for="BankAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IBAN">IBAN:</label>
                    <input type="text" asp-for="IBAN" class="form-control" />
                    <span asp-validation-for="IBAN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SortCode">Sort Code:</label>
                    <input type="text" asp-for="SortCode" class="form-control" />
                    <span asp-validation-for="SortCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" asp-action="Settings" asp-route-id="@Model.ID">
                </div>
            </form>
        </div>
                
    </div>
</div>
</div>
</div>
