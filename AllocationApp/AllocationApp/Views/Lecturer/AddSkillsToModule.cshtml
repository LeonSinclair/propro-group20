@model Module
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <div>Add a skill to a Module</div>
            <form method="post">
                <div class="form-group">
                    <input type="hidden" value="@Model.ModuleID" name="moduleID" />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Module Name:</label>
                    <div>@Model.Code @Model.Name</div>

                </div>
                <div class="form-group">
                    <label>Skill:</label>
                    <input type ="text" name="skillName"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary">
                </div>
            </form>

        </div>
    </div>
</div>