
@model User

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <div>Propose Adding a Demonstrator to a Module</div>
            <form method="post">
                <div class="form-group">
                    <input type="hidden" value="@Model.UserID" name="UserID" />
                </div>
                <div class="form-group">
                    <label asp-for="FirstName">First Name:</label>
                    <div>@Model.FirstName</div>
                    
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name:</label>
                    <div>@Model.LastName</div>
                    
                </div>
                <div>
                    <label>Skills:</label>
                    @{
                        if (Model.Skills != null)
                        {
                            @foreach (var skill in Model.Skills)
                            {
                                <div>@skill</div>
                            }
                        }
                        else
                        {
                            <div>No Skills Found</div>
                        }
                    }

                </div>
                <div class="form-group">

                    <select name="CourseID">
                        @foreach (var course in ViewBag.courses)
                        {
                            <option value="@course.CourseID" name="CourseID">@course.CourseID @course.Name</option>

                        }
                    </select>

                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary">
                </div>
            </form>

        </div>
    </div>
</div>