@model Tuple<User, IEnumerable<Course>>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <form method="post">
                <h3>Hello there! Enter new subordinates below!</h3>
                <div asp-validation-summary="ModelOnly"></div>
                <label asp-for="Item1.FirstName">First name:</label>
                <div class="form-group">
                    <input type="text" asp-for="Item1.FirstName" class="form-control" />
                    <span asp-validation-for="Item1.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.LastName">Surname:</label>
                    <input type="text" asp-for="Item1.LastName" class="form-control" />
                    <span asp-validation-for="Item1.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Skills">Skills:</label>
                    <input type="text" asp-for="Item1.Skills" class="form-control" />
                    <span asp-validation-for="Item1.Skills" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <select>
                        @foreach( var item in Model.Item2)
                        {
                            <option value="@item.CourseID">@item.Code @item.Name</option>

                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>