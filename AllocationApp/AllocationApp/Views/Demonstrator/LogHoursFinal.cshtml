@model AllocationApp.Models.ModuleUser

@{
    ViewData["Title"] = "LogHoursFinal";
}

<h4 class="text-center">Enter your worked hours below</h4>
<hr />
<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="ModuleID" />
            <input type="hidden" asp-for="HoursAllocated">
            <div>
                <p>Please enter your hours in decimal format i.e. 1.5 Hours = 1 Hour and 30 minutes</p>
            </div>
            <div class="form-group">
                <label asp-for="HoursWorked" class="control-label"></label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                <div><p>Your total hours worked so far: </p> <div>@Model.HoursWorked</div></div>
            </div>
            <div class="form-group">
                <input asp-action="LogHoursFinal" type="submit" value="Record" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LogHoursModuleSelect" asp-route-id="@Model.UserID">Back to Modules</a>
    <a asp-controller="User" asp-action="Users">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
