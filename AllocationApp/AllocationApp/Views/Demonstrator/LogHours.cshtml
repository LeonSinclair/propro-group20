@model AllocationApp.Models.LogHoursView

@{
    ViewData["Title"] = "Log Hours";
}

<h4 class="text-center">Log Hours</h4>
<h5 class="text-center">Select the module for which you would like the log hours</h5>
<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <form method="post">
            <div class="form-group">
                <input type="hidden" value="@Model.User.UserID" name="UserID" />
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName">First Name:</label>
                <div>@Model.User.FirstName</div>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName">Surname:</label>
                <div>@Model.User.LastName</div>
            </div>
            <div class="form-group">
                <label asp-for="Modules">Allocated Modules</label>
                <div>
                    <select name="ModuleID">
                        @foreach (var item in Model.Modules)
                        {
                            <option value="@item.ModuleID" name="ModuleID">@item.Name</option>
                            @Html.DisplayFor(modelItem => item.Name)
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary">
            </div>
        </form>
        <div>
            <a asp-controller="User" asp-action="Users">Cancel</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
