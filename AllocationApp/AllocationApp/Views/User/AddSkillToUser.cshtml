@model Tuple<User, List<Skill>>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <div>Add a skill to a Module</div>
            <form method="post">
                <div class="form-group">
                    <input type="hidden" value="@Model.Item1.UserID" name="userID" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Item1.FirstName">Name:</label>
                    <div>@Model.Item1.FirstName @Model.Item1.LastName</div>

                </div>
                <div class="form-group">
                    <select name="SkillID">
                        @foreach (var item in Model.Item2)
                        {
                            <option value="@item.SkillID" name="SkillID"> @item.Name  </option>
                            @Html.DisplayFor(modelItem => item.Name)
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary">
                </div>
            </form>

        </div>
    </div>
</div>