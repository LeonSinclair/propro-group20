@model IEnumerable<AllocationApp.Models.Role>

@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleType)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoleID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoleID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
