@model AllocationApp.Models.AddUserToRoleView

@{
    ViewData["Title"] = "AssignRoleToUser";
}

<h4 class="text-center">Assign Role To User</h4>
<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(modelItem => modelItem.User.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelItem => modelItem.User.LastName)
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.User.LastName)
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Role Types</th>
                </tr>
                @foreach (var item in Model.Roles)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleType)
                        </td>
                        <td>
                            <a asp-action="AssignRoleToUser" >Add Role</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-action="Users">Cancel</a>
        </div>
        </form>
    </div>
</div>
